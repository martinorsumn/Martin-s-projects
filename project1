                   if monster_drop == 'spider leg(s)':
                        confirm_purchase = input_wd(f"Are you sure you would like to make this trade? (yes or no)")
                        if confirm_purchase in {'yes','YES'}:
                            if monster_dropped <= 0:
                                print_italic("You do not have any spider legs to trade.")
                            elif monster_drop == 'spider leg(s)':
                                monster_dropped -= 1
                                player_items.pop(monster_dropped)
                                coins += 15
                                print_italic(f'You now have {monster_dropped} {monster_drop}. Your new balance is {coins} coins.')
                            else:
                                print_italic("You do not have any spider legs to trade.")
                        if confirm_purchase in {'no','NO'}:
                            print_italic('trade canceled.')
                   else:
                        print_italic("You do not have any spider legs to trade.")

