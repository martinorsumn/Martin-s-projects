#functions

# Adds a delay
def print_wd(message): 
    type_print(message)
    print()
    time.sleep(1.0)

# creates italic text for narration
def print_italic(message):
    print_wd(f"\033[3m{message}\033[0m")

# adds typewriter effect to input statement 
def input_vil(prompt):
    return input_wd(prompt)

def input_wd(prompt):
    type_print(prompt)
    return input()
    

# adds a delay every time something is printed.
def type_print(message, delay=0.03):
    for char in message:
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(delay)
    print()

#monster run
def escape(armor):
    if armor == 'iron':
        chance = 0.4 
    elif armor == 'leather':
        chance = 0.6 
    else:
        chance = 0.99  # no armor - run free lil man

    if random.random() < chance:
        return True
    else:
        return False

# how the player loses health when encountering a monster
def check_health(armor):
    if armor == 'iron':
        chance = 0.6  # 60% chance
    elif armor == 'leather':
        chance = 0.5  # 50% chance of damaging the player
    else:
        chance = 0.3  # no armor - ur cooked lil bro

    if random.random() < chance:
        return True
    else:
        return False
        
