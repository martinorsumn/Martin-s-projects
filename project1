                if shop_item == 'leave':
                    break

                elif shop_item == 'banana':
                    if player_hp == 100:
                        print_italic('You are already at full health.')
                        continue
                    if coins < 10:
                        print_italic('Invalid funds. Get more coins!')
                    if coins >= 10:
                        confirm_purchase = input_wd(f"Are you sure you would like to purchase this item for 10 coins? You have {coins} coins. (yes/no): ").lower()
                        if confirm_purchase in {'yes','YES'}:
                            if player_hp < 100:
                                player_hp += 10
                                if player_hp >= 100:
                                    player_hp = 100
                                coins -= 10 
                                print_italic("You have purchased and ate the banana.")
